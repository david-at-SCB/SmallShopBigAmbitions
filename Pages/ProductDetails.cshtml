@page "{id:int}"
@model SmallShopBigAmbitions.Pages.ProductDetailsModel
@{
    ViewData["Title"] = "Product Details";
}

@if (Model.Product is null)
{
    <div class="alert alert-warning">Product not found.</div>
}
else
{
    <div class="row g-4">
        <div class="col-md-5">
            <img src="@Model.Product.Image" class="img-fluid rounded border" alt="@Model.Product.Title" />
        </div>
        <div class="col-md-7">
            <h2>@Model.Product.Title</h2>
            <p class="text-muted">Category: @Model.Product.Category</p>
            <p>@Model.Product.Description</p>
            <h4>$@Model.Product.Price</h4>
            <form method="post" asp-page-handler="AddToCart" data-add-to-cart="true" class="d-flex align-items-center" style="gap:.5rem">
                <input type="hidden" name="id" value="@Model.Product.Id" />
                <input type="number" name="quantity" value="1" min="1" class="form-control" style="width:6rem" />
                <button type="submit" class="btn btn-primary">Add to cart</button>
                <a asp-page="/Products" class="btn btn-outline-secondary ms-2">Back to products</a>
            </form>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3">@Model.Message</div>
            }
        </div>
    </div>
}
