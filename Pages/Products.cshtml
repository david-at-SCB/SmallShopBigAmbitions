@page
@model SmallShopBigAmbitions.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var p in Model.Products)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <a asp-page="/ProductDetails" asp-route-id="@p.Id" class="text-decoration-none text-body">
                <img src="@p.Image" class="card-img-top" alt="@p.Title" />
            </a>
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-page="/ProductDetails" asp-route-id="@p.Id" class="stretched-link text-decoration-none text-body">@p.Title</a>
                </h5>
                <p class="card-text text-truncate" style="max-height:3rem">@p.Description</p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <strong>$@p.Price</strong>
                <form method="post" asp-page-handler="AddToCart" class="m-0">
                    <input type="hidden" name="id" value="@p.Id" />
                    <button type="submit" class="btn btn-sm btn-primary">Add to cart</button>
                </form>
            </div>
        </div>
    </div>
}
</div>
