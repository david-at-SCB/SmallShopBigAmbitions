@page
@model SmallShopBigAmbitions.Pages.Auth.ImpersonateModel
@{
    ViewData["Title"] = "Impersonate (Dummy Users)";
}
<h1>Select Dummy User</h1>
<p class="text-muted">For development only. Signs you in with a dummy identity.</p>
@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}
<table class="table table-sm">
    <thead><tr><th>Name</th><th>Email</th><th>Roles</th><th></th></tr></thead>
    <tbody>
    @foreach (var u in Model.Users)
    {
        <tr>
            <td>@u.DisplayName</td>
            <td>@u.Email</td>
            <td>@string.Join(',', u.Roles)</td>
            <td>
                <form method="post" asp-page-handler="Login" class="d-inline">
                    <input type="hidden" name="id" value="@u.Id" />
                    <button type="submit" class="btn btn-sm btn-primary">Impersonate</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<form method="post" asp-page-handler="Logout">
    <button type="submit" class="btn btn-outline-secondary">Sign out</button>
</form>
<a asp-page="/Index" class="btn btn-link mt-3">Back</a>
