<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmallShopBigAmbitions</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmallShopBigAmbitions.styles.css" asp-append-version="true" />
</head>
<body>
@using SmallShopBigAmbitions.Application.Cart.GetCartForUser
@using SmallShopBigAmbitions.Models
@using System.Security.Claims
@inject SmallShopBigAmbitions.FunctionalDispatcher.IFunctionalDispatcher Dispatcher
@{
    var cartCount = 0;
    string userLabel = "Guest";
    if (User?.Identity?.IsAuthenticated == true)
    {
        var isDummy = User.HasClaim(c => c.Type == "auth_kind" && c.Value == "dummy");
        var display = User.Claims.FirstOrDefault(c => c.Type == "display_name")?.Value
                       ?? User.Identity.Name
                       ?? User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value
                       ?? "User";
        userLabel = isDummy ? $"{display} (Dummy)" : display;
    }
    if (Context.Request.Cookies.TryGetValue("anon-id", out var raw) && Guid.TryParse(raw, out var userId))
    {
        try
        {
            var fin = await Dispatcher
                .Dispatch<GetCartForUserQuery, Cart>(new GetCartForUserQuery(userId), Context.RequestAborted)
                .RunAsync();
            fin.Match(
                Succ: cart => { cartCount = cart.Items.Count; return unit; },
                Fail: _ => unit);
        }
        catch { }
    }
}
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">SmallShopBigAmbitions</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Order">Order</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/ViewReports">View Reports</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-page="/Privacy">Privacy</a></li>
                        <li class="nav-item ms-sm-auto dropdown">
                            <a class="nav-link text-dark position-relative dropdown-toggle" href="#" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cart @if (cartCount > 0){<span class="badge rounded-pill bg-primary ms-1" id="cart-count">@cartCount</span>}
                            </a>
                            <div class="dropdown-menu dropdown-menu-end p-3" style="min-width: 220px;" id="mini-cart-container">
                                <div class="text-muted small">Loading...</div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Auth/Impersonate">@userLabel</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SmallShopBigAmbitions - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function loadMiniCart() {
            try {
                const res = await fetch('/Cart?handler=Mini');
                if (!res.ok) return;
                const html = await res.text();
                document.getElementById('mini-cart-container').innerHTML = html;
            } catch { }
        }
        document.addEventListener('DOMContentLoaded', () => {
            loadMiniCart();
            document.body.addEventListener('submit', async e => {
                const form = e.target;
                if (form.matches('form[data-add-to-cart="true"]')) {
                    e.preventDefault();
                    const data = new FormData(form);
                    const action = form.getAttribute('action') || window.location.pathname + '?handler=AddToCart';
                    try {
                        await fetch(action, { method: 'POST', body: data, headers: { 'X-Requested-With': 'Fetch' } });
                        await loadMiniCart();
                    } catch { }
                }
            });
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
